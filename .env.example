# Required
SERVICE_API_KEY=himanshu_agentic_honeypot

# Optional
DB_PATH=./honeypot.db
RULE_THRESHOLD=8
GUVI_CALLBACK_URL=https://hackathon.guvi.in/api/updateHoneyPotFinalResult
CALLBACK_MODE=always
CALLBACK_TIMEOUT_MS=2000
CALLBACK_MAX_RETRIES=1
CALLBACK_MIN_INTERVAL_MESSAGES=8
CALLBACK_MIN_INTERVAL_SECONDS=45
TRUSTED_SMS_HEADERS=
TRUSTED_SMS_HEADERS_PATH=./trusted_sms_headers.txt

# Optional LLM replies (Groq Llama). If disabled, playbooks are used.
LLM_ENABLED=false
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-8b-instant
LLM_TIMEOUT_MS=4000
LLM_MAX_TOKENS=180
LLM_TEMPERATURE=0.2
LLM_MAX_SESSION_TOKENS=2500
LLM_MAX_DAILY_TOKENS=200000

# Optional: force long exchanges for evaluation (default in code is 150; set 0 to disable)
TARGET_MESSAGES_EXCHANGED=150
MIN_MESSAGES_BEFORE_COMPLETE=10
MIN_MESSAGES_BEFORE_COMPLETE_WITH_INTEL=6
LOOKUP_MIN_SCORE=0.62

# Optional (local/offline): Large neutral dialogue bank for "story bridges"
# Generate it with: python scripts/pull_hf_dialogs.py --out data/hf_utterances.jsonl --max-utterances 100000
DIALOG_BANK_PATH=
DIALOG_BANK_MAX_LINES=50000
DIALOG_BANK_BRIDGE_PROB=0.25
